/* ============================================ */
/* Press Page Styles
/* Modern design consistent with home page
/* ============================================ */

/* Press Page Wrapper */
.press-page-wrapper {
    min-height: 100vh;
    background-color: var(--light);
}

/* Hero Section */
.press-hero {
    background: linear-gradient(135deg, var(--primary) 0%, var(--primary-dark) 100%);
    padding: 150px 0 100px;
    position: relative;
    overflow: hidden;
}

.press-hero::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 320"><path fill="%23ffffff" fill-opacity="0.1" d="M0,96L48,112C96,128,192,160,288,165.3C384,171,480,149,576,133.3C672,117,768,107,864,128C960,149,1056,203,1152,213.3C1248,224,1344,192,1392,176L1440,160L1440,320L1392,320C1344,320,1248,320,1152,320C1056,320,960,320,864,320C768,320,672,320,576,320C480,320,384,320,288,320C192,320,96,320,48,320L0,320Z"></path></svg>') no-repeat bottom center;
    background-size: cover;
}

.press-hero-content {
    text-align: center;
    max-width: 800px;
    margin: 0 auto;
    padding: 0 20px;
    position: relative;
    z-index: 2;
}

.press-hero h1 {
    color: var(--white);
    font-size: 3.5rem;
    margin-bottom: 1rem;
    font-family: var(--display-font);
    font-weight: 500;
    letter-spacing: 1px;
    animation: fadeInUp 0.8s ease-out;
}

.press-hero .subtitle {
    color: rgba(255, 255, 255, 0.9);
    font-size: 1.25rem;
    font-family: var(--body-font);
    font-style: italic;
    animation: fadeInUp 0.8s ease-out 0.2s backwards;
}

/* Press Section */
.press-section {
    padding: 80px 0;
    background-color: var(--white);
}

.press-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
}

/* Press Grid */
.press-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
    gap: 40px;
    margin-top: 40px;
}

/* Press Card */
.press-card {
    background: var(--white);
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
    transition: all var(--transition-medium);
    border: 1px solid var(--light-gray);
}

.press-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 15px 40px rgba(175, 143, 90, 0.15);
}

.press-card-inner {
    height: 100%;
    display: flex;
    flex-direction: column;
}

/* Press Image */
.press-image {
    position: relative;
    overflow: hidden;
    height: 250px;
    background-color: var(--primary-ultralight);
}

.press-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform var(--transition-slow);
}

.press-card:hover .press-image img {
    transform: scale(1.05);
}

/* Press Content */
.press-content {
    padding: 30px;
    flex-grow: 1;
    display: flex;
    flex-direction: column;
}

/* Press Meta */
.press-meta {
    display: flex;
    align-items: center;
    gap: 15px;
    margin-bottom: 15px;
    font-size: 0.9rem;
    color: var(--gray);
}

.press-date {
    font-family: var(--heading-font);
    font-weight: 500;
}

.press-source {
    color: var(--primary);
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
}

.press-source::before {
    content: 'â€¢';
    margin-right: 15px;
    color: var(--light-gray);
}

/* Press Title */
.press-title {
    margin-bottom: 20px;
    line-height: 1.3;
}

.press-title a {
    color: var(--dark-text);
    text-decoration: none;
    transition: color var(--transition-fast);
    font-size: 1.5rem;
    font-weight: 500;
    font-family: var(--heading-font);
}

.press-title a:hover {
    color: var(--primary);
}

/* Press Excerpt */
.press-excerpt {
    color: var(--gray);
    line-height: 1.6;
    margin-bottom: 20px;
    font-size: 1rem;
    flex-grow: 1;
}

.press-excerpt p {
    margin-bottom: 0;
}

/* Press Detail Preview */
.press-detail-preview {
    margin-bottom: 20px;
    padding: 15px;
    background-color: var(--primary-ultralight);
    border-radius: 8px;
}

.press-detail-preview h3 {
    font-size: 1.1rem;
    color: var(--primary);
    margin-bottom: 8px;
    font-weight: 600;
}

.press-detail-preview p {
    font-size: 0.9rem;
    color: var(--dark-text);
    margin-bottom: 0;
    line-height: 1.5;
}

/* Press Link */
.press-link {
    color: var(--primary);
    text-decoration: none;
    font-weight: 600;
    font-size: 0.95rem;
    display: inline-flex;
    align-items: center;
    gap: 8px;
    transition: all var(--transition-fast);
    margin-top: auto;
}

.press-link:hover {
    color: var(--primary-dark);
    gap: 12px;
}

.press-link i {
    font-size: 0.8rem;
    transition: transform var(--transition-fast);
}

.press-link:hover i {
    transform: translateX(3px);
}

/* No Press Message */
.no-press {
    text-align: center;
    padding: 80px 20px;
    color: var(--gray);
}

.no-press p {
    font-size: 1.2rem;
    font-style: italic;
}

/* Animations */
@keyframes fadeInUp {
    from {
        opacity: 0;
        transform: translateY(30px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

/* Responsive */
@media (max-width: 768px) {
    .press-hero {
        padding: 120px 0 80px;
    }
    
    .press-hero h1 {
        font-size: 2.5rem;
    }
    
    .press-hero .subtitle {
        font-size: 1.1rem;
    }
    
    .press-grid {
        grid-template-columns: 1fr;
        gap: 30px;
    }
    
    .press-section {
        padding: 60px 0;
    }
    
    .press-content {
        padding: 25px;
    }
    
    .press-image {
        height: 200px;
    }
    
    .press-title a {
        font-size: 1.3rem;
    }
}